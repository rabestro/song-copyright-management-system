### negative royalty
POST {{host}}/api/copyrights/
Content-Type: application/json

{
  "royalty": -3.99,
  "periodStart": "2022-01-01",
  "periodEnd": "2023-01-01",
  "company_id": 1,
  "recording_id": 1
}

> {%
client.test("should validate royalty and it must be positive or zero", function() {
  client.assert(response.status === 400, "Response status is not 400");
});
%}

